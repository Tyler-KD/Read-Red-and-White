<div>
    <div>
        <h3 class="text-6xl pt-12 text-center">Edit Review:</h3>
        <form class="form new-review-form">
            <div class="form-group">
                <p class="review-title text-4xl pt-12 text-center">Title: {{title}}</p>
            </div>
            <div class="text-4xl pt-12 pb-2 text-center" for="review-content">Content:</div>
            <div class="form-group flex justify-center">
                
                <textarea class="form-content px-36 py-36 rounded-lg border-2 border-black" id="review-content" name="review-content">{{content}}</textarea>
            </div>
            <div class="form-group flex justify-center py-6">
                <button class="btn btn-primary update-form bg-blue-500 hover:bg-blue-700 hover:scale-125 border-2 border-black text-white text-2xl font-bold py-2 px-4 rounded-full">Update</button>
            </div>
            <div class="form-group flex justify-center py-6">
                <button class="btn btn-sm btn-danger review-form bg-blue-500 hover:bg-blue-700 hover:scale-125 border-2 border-black text-white text-2xl font-bold py-2 px-4 rounded-full" data-id="{{review.id}}">DELETE</button>
            </div>
        </form>
    </div>
</div>

<script src="/js/edit-review.js"></script>