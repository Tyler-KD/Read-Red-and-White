<div class="grid grid-cols-4 gap-14">{{#each reviews as |review| }}


    <div class="my-10">
        <div class="rounded-lg border-4">
            <div class="bg-blue-400 hover:bg-blue-600">
                <h2 class="text-3xl py-4 font-semibold text-center">
                    <a href="/review/{{review.id}}">{{review.title}}</a>
                </h2>
                   <div class="flex justify-center"> 
                        <img src="{{review.image}}" class="object-center object-cover h-72"> 
                    </div>
                <p class="text-center py-4 pb-8">Author: {{review.author}}</p>

                 
                   
                
                
                   
                
                <p class="text-2xl py-5 text-center">Created by {{review.user.username}} on {{format_date review.date_created}}</p>


                
                     <p class="text-xl py-1 px-4 bg-red-300">
                        {{review.content}}
                    </p>

                
            </div>
      

        </div>

    </div>


{{/each}}</div>