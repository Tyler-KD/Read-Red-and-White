{{#each reviews as |review| }}

<div class="grid grid-cols-4 gap-9">
    <div>
        <div class="rounded-lg border-4">
            <div class="bg-blue-400 hover:bg-blue-600">
                <h2 class="text-3xl font-semibold">
                    <a href="/review/{{review.id}}">{{review.title}}</a>
                </h2>
                <p class="text-2xl">Created by {{review.user.username}} on {{format_date review.date_created}}</p>

             </div>
            <div class="text-xl bg-red-300">
                <p>
                    {{review.content}}
                </p>
        
            </div>  
    
         </div>
    
    </div>
</div>

{{/each}}