{{#each reviews as |review| }}
<div class="row mb-4 blog">
    <div class="col-md-5 bg-blue-400">
        <div class="col-md-5 bg-red-400">
            <h2>
                <a href="/review/{{review.id}}">{{review.title}}</a>
            </h2>
            <p class="text-xl">Created by {{review.user.username}} on {{format_date review.date_created}}</p>

        </div>
        <div class="col-md-7 bg-red-600">
            <p>
                {{review.content}}
            </p>
        
        </div>
    
    </div>
    <script src="/js/bookapi.js"></script>
</div>
{{/each}}